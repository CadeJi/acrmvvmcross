<UserControl x:Class="Acr.MvvmCross.Plugins.UserDialogs.WinPhone.Views.ActionSheet"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Border Width="400" Background="Black" BorderThickness="2" BorderBrush="{StaticResource PhoneAccentBrush}">
        <StackPanel Name="LayoutRoot" Margin="10">
            <TextBlock Name="Title" />
            <ListBox Name="List">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Foreground="White" Text="{Binding Text}" TextWrapping="Wrap"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Border>
</UserControl>