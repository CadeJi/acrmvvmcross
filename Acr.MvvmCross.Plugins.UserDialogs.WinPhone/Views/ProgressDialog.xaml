<UserControl x:Class="Acr.MvvmCross.Plugins.UserDialogs.WinPhone.Views.ProgressDialogControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <StackPanel Name="LayoutRoot" Width="400"  Height="300" Background="{StaticResource PhoneChromeBrush}">
        <ProgressBar Name="ProgressBar" />
        <TextBlock Name="LoadingText" />
        <Button Name="CancelButton" Visibility="Collapsed" />
    </StackPanel>
</UserControl>